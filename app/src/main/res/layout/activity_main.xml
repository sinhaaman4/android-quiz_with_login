<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorBackground"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.aman.androidquiz.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="117dp"
        android:id="@+id/editText_login_uid"
        android:hint="username"
        android:background="@android:color/transparent"
        tools:textColorHint="@android:color/background_light"
        android:textColorHighlight="@android:color/background_light"
        android:typeface="serif"
        android:textAlignment="center"
        android:textSize="18sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:background="@android:color/transparent"
        android:layout_below="@+id/editText_login_uid"
        android:layout_alignEnd="@+id/editText_login_uid"
        android:layout_marginTop="44dp"
        android:id="@+id/editText_login_pass"
        android:hint="password"
        tools:textColorHint="@android:color/background_light"
        android:textColorHighlight="@android:color/background_light"
        android:textAlignment="center"
        android:capitalize="none"
        android:typeface="serif"
        android:textSize="18sp" />

    <Button
        android:text="login"
        android:onClick="button_login_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText_login_pass"
        android:background="@color/colorPrimary"
        android:textColor="#FFFFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:id="@+id/button_login"
        android:textSize="24sp" />

    <Button
        android:text="signup"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="wrap_content"
        android:id="@+id/signup"
        android:textColor="#FFFFFFFF"
        android:onClick="button_signup_click"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/button_login"
        android:layout_alignStart="@+id/button_login"
        android:textSize="24sp" />
</RelativeLayout>
